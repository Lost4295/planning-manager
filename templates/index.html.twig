{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Bienvenue sur Mon Calendrier</h1>
    <p>Gérez vos événements facilement et efficacement.</p>
    <a href="{{ path('app_date_index') }}">Voir les événements</a>
    <a href="{{ path('calendar') }}">Voir le calendrier</a>
    {% if app.user %}
    <br>
    <a href="{{ path('app_date_new') }}">Créer un nouvel événement</a>

        <div class="card">
            <div id='card-header'>
                <h3> Hello {{ app.user.pseudo }} !</h3>
            </div>
            <div class="card-body">
                <img src="{{ app.user.avatar }}" width="150" alt="Avatar de {{ app.user.pseudo }}"/>
            </div>
        </div>
    {% endif %}
{% endblock %}
