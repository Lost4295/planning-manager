{% extends 'base.html.twig' %}

{% block title %}Date{% endblock %}

{% block body %}
    <h1>Date</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ date.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ date.title }}</td>
        </tr>
        <tr>
            <th>Start_date</th>
            <td>{{ date.startDate ? date.startDate|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>End_date</th>
            <td>{{ date.endDate ? date.endDate|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Color</th>
            <td>{{ date.color }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ date.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_date_index') }}">back to list</a>

    {% if app.user %}
        <a href="{{ path('app_date_edit', {'id': date.id}) }}">edit</a>
        {{ include('date/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
