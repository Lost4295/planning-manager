{% extends 'base.html.twig' %}

{% block title %}Date index{% endblock %}

{% block body %}
    <h1>Date index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Color</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for date in dates %}
            <tr>
                <td>{{ date.id }}</td>
                <td>{{ date.title }}</td>
                <td>{{ date.startDate ? date.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ date.endDate ? date.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ date.color }}</td>
                <td>{{ date.description }}</td>
                <td>
                    <a href="{{ path('app_date_show', {'id': date.id}) }}">show</a>
                    <a href="{{ path('app_date_edit', {'id': date.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_date_new') }}">Create new</a>
{% endblock %}
