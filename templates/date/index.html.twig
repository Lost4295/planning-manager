{% extends 'base.html.twig' %}

{% block title %}Mes √âv√©nements{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>üìÖ Mes √âv√©nements</h1>

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for date in dates %}
                <div class="col">
                    <div class="card p-3 h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark mb-3" style="font-weight: 700; font-size: 1.3rem;">
                                {{ date.title }}
                            </h5>

                            <div class="mb-2">
                                <i class="bi bi-calendar-event" style="color: #667eea;"></i>
                                <strong class="text-dark">D√©but :</strong>
                                <span style="color: var(--muted-text);">
                                    {{ date.startDate ? date.startDate|date('d/m/Y √† H:i') : 'Non d√©fini' }}
                                </span>
                            </div>

                            <div class="mb-3">
                                <i class="bi bi-calendar-check" style="color: #f5576c;"></i>
                                <strong class="text-dark">Fin :</strong>
                                <span style="color: var(--muted-text);">
                                    {{ date.endDate ? date.endDate|date('d/m/Y √† H:i') : 'Non d√©fini' }}
                                </span>
                            </div>

                            <div class="mb-3">
                                <i class="bi bi-palette" style="color: #4facfe;"></i>
                                <strong class="text-dark">Couleur :</strong>
                                <span class="badge ms-2" data-color="#{{ date.color }}">
                                    #{{ date.color }}
                                </span>
                            </div>

                            {% if date.description %}
                                <div class="mb-3 flex-grow-1">
                                    <i class="bi bi-text-left" style="color: #38ef7d;"></i>
                                    <strong class="text-dark">Description :</strong>
                                    <p style="color: var(--muted-text); margin-top: 0.5rem; font-size: 0.95rem;">
                                        {{ date.description|length > 100 ? date.description|slice(0, 100) ~ "..." : date.description }}
                                    </p>
                                </div>
                            {% endif %}

                            <div class="mt-auto d-flex gap-2 flex-wrap justify-content-center">
                                <a href="{{ path('app_date_show', {'id': date.id}) }}" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-eye"></i> D√©tails
                                </a>
                                {% if app.user %}
                                    <a href="{{ path('app_date_edit', {'id': date.id}) }}" class="btn btn-warning flex-grow-1">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="card p-5 text-center">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">üì≠</div>
                        <h3 style="color: var(--muted-text);">Aucun √©v√©nement enregistr√©</h3>
                        <p style="color: var(--muted-text); margin-top: 1rem;">
                            Commencez par cr√©er votre premier √©v√©nement !
                        </p>
                        {% if app.user %}
                            <div class="mt-3">
                                <a href="{{ path('app_date_new') }}" class="btn btn-success btn-lg">
                                    <i class="bi bi-plus-circle"></i> Cr√©er un √©v√©nement
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if app.user and dates|length > 0 %}
            <div class="text-center mt-4">
                <a href="{{ path('app_date_new') }}" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Cr√©er un nouvel √©v√©nement
                </a>
            </div>
        {% endif %}
    </div>

    <script>
        const toRGB = (color) => {
            const { style } = new Option();
            style.backgroundColor = color;
            return style.backgroundColor;
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.badge').forEach(badge => {
                const color = badge.dataset.color;
                badge.style.backgroundColor = toRGB(color);

                // Ajuster la couleur du texte selon la luminosit√© du fond
                const rgb = toRGB(color).match(/\d+/g);
                if (rgb) {
                    const brightness = (parseInt(rgb[0]) * 299 + parseInt(rgb[1]) * 587 + parseInt(rgb[2]) * 114) / 1000;
                    badge.style.color = brightness > 128 ? '#1a1a2e' : '#ffffff';
                }
            });
        });
    </script>
{% endblock %}
